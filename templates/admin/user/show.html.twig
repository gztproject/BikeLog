{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_user_show' %}

{% block main %}
    <h1>{{ user.fullName }}</h1>

    <p class="user-email">
        <span class="email"><i class="fa fa-envelope"></i> {{ user.email }}</span>
    </p>
    <div class="row">
        <div class="col-8">
            <div class="card text-white bg-primary mb-3"> 
            <div class="card-header">
                    <strong>{{ 'label.userData'|trans }}</strong>
                </div>    
                <div class="card-body">                    
                    <strong>{{ 'label.username'|trans }}</strong>: {{ user.username }} 
                        
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card text-white bg-primary mb-3"> 
            <div class="card-header">
                    <strong>{{ 'label.images'|trans }}</strong>
                </div>    
                <div class="card-body"> 
                    <div class="row">
                        <div class="col-6">
                            {{ "label.profilePicture"|trans }}
                        </div>                       
                    </div>                 
                    <div class="row">  
                        <div class="col-6">
                            
                        </div>
                        <div class="col-6">
                            <img src="{{ asset(user.profilePictureFilename) }}" alt="Profile picture" width="100%">
                        </div>
                    </div>  
                </div>
            </div>
            
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-sm btn-block btn-success">
            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit_contents'|trans }}
        </a>
    </div>

    <div class="section">
        {{ include('admin/user/_delete_form.html.twig', {user: user}, with_context = false) }}
    </div>
    
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/user/showUser') }}
{% endblock %}