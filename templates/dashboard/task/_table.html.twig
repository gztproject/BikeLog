<div class="table-responsive-sm">
	<table class="table table-hover table-striped">
		<thead class="thead-dark">
			<tr>
				<th scope="col">{{ 'label.name'|trans }}</th>
				<th scope="col">{{ 'label.description'|trans }}</th>

				{% if area == "admin" %}
				<th scope="col">{{ 'label.bike'|trans }}</th>
				<th scope="col">{{ 'label.model'|trans }}</th>
				{% endif %}

			</tr>
		</thead>
		<tbody>
			{% for taskDto in tasksDto %}
			{% for task in taskDto.tasks %}
			<tr>
			    <th scope="row">{{ taskDto.bike.model.name }}</th>
				<td>{{ taskDto.bike.name }}</td>
				
				<td>{{ task.name}}</td>

				{% if area == "admin" %}
				{% if task.part != null %}
				<td>{{ task.part.name }}</td>
				{% endif %}
				{% endif %}
			</tr>
			{% endfor %}
			{% else %}
			<tr class="table-warning">
				<td colspan="8" align="center">{{ 'label.noneFound.tasks'|trans }}</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
