<div class="table-responsive-sm">
	<table class="table table-hover table-striped">
		<thead class="thead-dark">
			<tr>
				<th scope="col">{{ 'label.name'|trans }}</th>
				<th scope="col">{{ 'label.owner'|trans }}</th>

				{% if area == "admin" %}
				<th scope="col">{{ 'label.clients'|trans }}</th>
				<th scope="col">{{ 'label.actions'|trans }}</th>
				{% endif %}

			</tr>
		</thead>
		<tbody>
			{% for workshop in workshops %}
			<tr>
				<th scope="row"><a href="workshop/{{ workshop.id }}">{{ workshop.name }}</a></th>
				<td>{{ workshop.owner.username}}</td>

				{% if area == "admin" %}
				<td>
					<ul>
						{% for user in workshop.clients %}
						<li>{{ user.username }}</li>
						{% endfor %}
					</ul>
				</td>
				<td><a
					href="{{  path('addWorkshopUser', { 'id': workshop.id }) }}"
					class="btn btn-sm btn-success"> <i class="fa fa-plus"
						aria-hidden="true"></i> {{ 'action.add.user'|trans }}
				</a></td>
				{% endif %}
			</tr>
			{% else %}
			<tr class="table-warning">
				<td colspan="8" align="center">{{ 'label.noneFound.workshops'|trans }}</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
