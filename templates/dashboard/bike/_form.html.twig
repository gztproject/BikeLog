{{ form_start(form, {'attr': {'class': 'bs-component'}}) }}

<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            {{ form_label(form.nickname, null, {'label_attr': {'class': 'col-form-label-lg'}} ) }}
            <div class='input-group'>
                {{ form_widget(form.nickname, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="form-group" id='DatePicker'>
            {{ form_label(form.purchaseDate, null, {'label_attr': {'class': 'col-form-label-lg'}} ) }}
            <div class='input-group'>
                {{ form_widget(form.purchaseDate, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-calendar"
                    aria-hidden="true"></i></span>
            </div>
        </div>
    </div>
</div>
{{ form_row(form._token) }}
{{ form_end(form, {'render_rest': true}) }}