<table class="table table-hover">
	<thead>
		<tr>
			<th scope="col">{{ 'label.name'|trans }}</th>
			<th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i>{{ 'label.year'|trans }}</th>
			<th scope="col"><i class="fa fa-file" aria-hidden="true"></i> {{ 'label.VIN'|trans }}</th>
			
		</tr>
	</thead>
	<tbody>
		{% for bike in bikes %}
		<tr>
		  <td>{{ bike.getName }}</td>
		  <td>{{ bike.getYear }}</td>
		  <td>{{ bike.getVin }}</td>
		</tr>
		{% else %}
		<tr class="table-warning">
			<td colspan="4" align="center">{{ 'label.no_refuelings_found'|trans }}</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
