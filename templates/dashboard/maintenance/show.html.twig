{% extends 'dashboard/layout.html.twig' %}

{% block body_id 'maintenance_show' %}

{% block main %}

<h1>
	{{ 'title.maintenance'|trans }}
</h1>

<h2>
	{{ maintenance.dateString }}
	@
	{{ maintenance.workshop.name }}
</h2>
<h3>
	{{ maintenance.bike.name }}
	:
	{{ maintenance.odometer|number_format }}
	km
</h3>

<table class="table table-hover table-striped">
	<thead class="thead-dark">
		<tr>
			<th scope="col">{{ "label.task"|trans }}</th>
			<th>{{ "label.cost"|trans }}</th>
		</tr>
	</thead>
	<tbody>
	{% for t in maintenance.maintenanceTasks %}
	<tr>
		<th scope="row">{{ t.task.name }}</td>
		<td>{{ t.cost | number_format }} â‚¬</td>

	</tr>

	{% endfor %}
	</tbody>
</table>

{% endblock %}